    private void txtNomeActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
    }                                       

    private void txtMensagemActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    }                                           

    private void btnSairActionPerformed(java.awt.event.ActionEvent evt) {                                        
        System.exit(0);
    }                                       

    private void btnLimparActionPerformed(java.awt.event.ActionEvent evt) {                                          
        txtNome.setText("");
        txtIdade.setText("");
        txtMensagem.setText("");
        txtNome.grabFocus();
    }                                         

    private void btnMensagemActionPerformed(java.awt.event.ActionEvent evt) {                                            
        String nome=txtNome.getText();
        int idade=Integer.parseInt(txtIdade.getText());//da caixa de texto para variável
        txtMensagem.setText(nome+" "+idade + " anos ");//agora a minha caixa de texto recebe alguma coisa
    }                                           

    private void txtNomeKeyPressed(java.awt.event.KeyEvent evt) {                                   
       if(evt.getKeyCode()==KeyEvent.VK_ENTER)//precionar qualquer tecla, ele vai VK_ENTER(é uma constante) se evt recebeu, desce para caixa de baixo, deslocar o foco
           txtIdade.grabFocus();
       
    }                                  

    private void txtIdadeActionPerformed(java.awt.event.ActionEvent evt) {                                         

    }                                        

    private void btnMensagemKeyPressed(java.awt.event.KeyEvent evt) {                                       
        if (evt.getKeyCode() == KeyEvent.VK_ENTER) {
          String nome =txtNome.getText();
          int idade = Integer.parseInt(txtIdade.getText());
          txtMensagem.setText(nome+ "" + idade + " anos");
        }
    }                                      

    private void txtIdadeKeyPressed(java.awt.event.KeyEvent evt) {                                    
       if (evt.getKeyCode() == KeyEvent.VK_ENTER){
           btnMensagem.grabFocus();
       }
    }                                   

